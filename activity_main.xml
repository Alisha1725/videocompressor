<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grad"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heyy Users!!"
                android:fontFamily="cursive"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="50dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:shadowColor="@color/mycolor4"
                android:shadowRadius="10"
                android:shadowDx="10"
                android:shadowDy="7"></TextView>
            <androidx.cardview.widget.CardView
                android:layout_height="200dp"
                android:layout_width="350dp"
                android:layout_rowWeight="1"
                android:layout_marginBottom="80dp"
                android:layout_marginTop="80dp"
                android:padding="40dp"
                android:layout_gravity="center"
                app:cardElevation="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WELCOME IN VIDEO COMPRESSION"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    android:shadowColor="@color/mycolor4"
                    android:shadowRadius="15"
                    android:shadowDx="15"
                    android:shadowDy="5"
                    android:textSize="45dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_gravity="center"></TextView>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click Here For Compress Your Video..."
                android:textColor="@color/black"
                android:fontFamily="serif-monospace"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:gravity="center"></TextView>
 <Button
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/btnchoose"
     android:background="@color/lightgreen"
     android:textColor="@color/black"
     android:textStyle="bold"
     android:textSize="25dp"
     android:layout_marginLeft="15dp"
     android:layout_marginRight="15dp"
     android:shadowColor="@color/myfav3"
     android:shadowRadius="10"
     android:shadowDy="10"
     android:shadowDx="5"
     android:layout_marginTop="20dp"
   android:text="Compress Video"></Button>

        </LinearLayout>
    </ScrollView>
</LinearLayout>